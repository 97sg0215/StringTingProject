                                android:scaleType="center"
                                android:onClick="onClick_imageUpload3"/>

                            <ImageView
                                android:id="@+id/photo4"
                                android:layout_width="106dp"
                                android:layout_height="106dp"
                                android:layout_marginLeft="24dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_plus"
                                android:scaleType="center"
                                android:onClick="onClick_imageUpload4"/>

                            <ImageView
                                android:id="@+id/photo5"
                                android:layout_width="106dp"
                                android:layout_height="106dp"
                                android:layout_marginLeft="24dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_plus"
                                android:scaleType="center"
                                android:onClick="onClick_imageUpload5"/>

                            <ImageView
                                android:id="@+id/photo6"
                                android:layout_width="106dp"
                                android:layout_height="106dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="39dp"
                                android:layout_weight="1"
