<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.string.leeyun.stringting_android.MainActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/stringlogo" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="vertical">




        <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/loginBtn"
            android:layout_width="218dp"
            android:layout_height="45dp"
            android:background="@drawable/fb_membership"
            android:onClick="facebookLoginOnclick"/>



        <FrameLayout
            android:id="@+id/loginBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.kakao.usermgmt.LoginButton
                android:id="@+id/com_kakao_login"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:layout_width="218dp"
                android:layout_height="45dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/kakao_membership"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/local_btn"
            android:layout_width="218dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:onClick="onClick_membership"
            android:background="@drawable/email_membership"/>

</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:onClick="onClick_login_firstpage"
            android:layout_marginTop="14dp"
            android:layout_gravity="center"
            android:text="로그인"
            />

        <ImageView
            android:layout_width="337dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="#e5e5e5"/>


    <TextView

        android:id="@+id/Provision_Linkify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="9sp"
        android:textColor="#666666"
        android:textColorLink="#666666"
        />



</LinearLayout>

