<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context="com.example.leeyun.stringting_android.MainActivity"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/topBlank_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.11"
        >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.26"
        android:layout_below="@+id/topBlank_layout"

        >
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp">



        <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonId"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="커스텀 페이스북 로그인 버튼"
            android:layout_centerHorizontal="true"

            />

        <Button
            android:id="@+id/local_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBtn"
            android:paddingTop="10dp"
            android:text="local"
            android:layout_centerHorizontal="true"
            android:onClick="onClick_membership"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/local_btn"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="기존회원 로그인"
            android:textSize="15sp"
            android:onClick="onClick_login_firstpage"/>

    </RelativeLayout>
</RelativeLayout>
