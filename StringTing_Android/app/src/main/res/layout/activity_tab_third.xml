<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sb">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#de000000"
                android:lineSpacingExtra="12sp"
                android:text="플레이스"
                android:textSize="16sp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sb">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="31dp"
                        android:layout_marginLeft="16dp"
                        android:letterSpacing="0.04"
                        android:text="내가 좋아하는 카드"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="94dp"
                            android:layout_height="127dp"
                            android:layout_marginRight="23dp"
                            android:background="@drawable/rounded">

                            <ImageView
                                android:id="@+id/ph1"
                                android:layout_width="94dp"
                                android:layout_height="94dp"
                                android:padding="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/gametitle_01" />


                            <TextView
                                android:id="@+id/white_text"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:layout_below="@+id/ph1"
                                android:background="@drawable/gradient_background"
                                android:paddingLeft="8dp"
                                android:text="White Member"
                                android:textColor="#ffffff"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/white_text"
                                android:layout_gravity="start"
                                android:textColor="#000000"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="4dp"
                                android:text="#서울 #23세"
                                android:textSize="9sp" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="13.9dp"
                                android:layout_height="19.1dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginBottom="10.6dp"
                                android:layout_marginRight="10.1dp"
                                app:srcCompat="@mipmap/x" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/rounded">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/border_bottom"
                                android:scaleType="fitXY" />

                            <TextView

                                android:layout_width="71dp"
                                android:layout_height="27dp"
                                android:layout_below="@+id/imageView2"
                                android:layout_gravity="start"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="21dp"
                                android:text="#서울 #기획자 #182 #기획자"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="13.9dp"
                                android:layout_height="19.1dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginBottom="10.6dp"
                                android:layout_marginRight="10.1dp"
                                app:srcCompat="@mipmap/x" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:background="@drawable/rounded">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/border_bottom"
                                android:scaleType="fitXY" />

                            <TextView

                                android:layout_width="71dp"
                                android:layout_height="27dp"
                                android:layout_below="@+id/imageView3"
                                android:layout_gravity="start"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="21dp"
                                android:text="#서울 #기획자 #182 #기획자"
                                android:textSize="10sp" />

                            <ImageView

                                android:layout_width="13.9dp"
                                android:layout_height="19.1dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginBottom="10.6dp"
                                android:layout_marginRight="10.1dp"
                                app:srcCompat="@mipmap/x" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="21dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="131dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="18dp"
                            android:background="#cecece" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="32dp"
                            android:layout_height="12dp"
                            android:letterSpacing="0.05"
                            android:text="더보기"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="131dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="18dp"
                            android:background="#cecece" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
