<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sb">

            <ImageButton
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:onClick="onClick_back"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/arrow_back"
                />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#de000000"
                android:lineSpacingExtra="12sp"
                android:text="로그인"
                android:textSize="16sp" />

        </RelativeLayout>


    <LinearLayout
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/sb"
        >

        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="이메일 아이디"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/id_Edit"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:text=""
            android:textSize="11sp"
            android:background="#00000000"/>

        <View
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:background="#666666"/>


        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="비밀번호"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/pw_edit"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="11sp"
            android:background="#00000000"/>

        <View
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:background="#666666"/>



        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:onClick="onClick_login_check"
            android:background="@drawable/rounded_membershipbtn"
            android:text="로그인 하기"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="스트링 계정 만들러 가실래요?"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:textSize="10sp"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="비밀번호를 까먹으셨다구요?"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:textSize="10sp"
            android:textColor="#666666"/>

    </LinearLayout>

</RelativeLayout>
